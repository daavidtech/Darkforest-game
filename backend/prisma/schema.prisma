// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
	id           Int      @id @default(autoincrement())
	username     String   @unique
	email        String   @unique
	passwordHash String
	isAdmin      Boolean  @default(false)
	allianceId Int @map("alliance_id")
}

model Building {
	id Int @id @default(autoincrement())
	buildingType Int @map("building_type")
	level Int

	gold Int?
	wood Int?
	iron Int?
	lithium Int?
	uranium Int?
	energy Int?

	health Int

	villageId Int @map("village_id")

	village Village

	@@map("buildings")
}

model Unit {
	id Int @id @default(autoincrement())
	unitType Int
	amount Int
	planetId Int

	@@map("units")
}

model Village {
	id Int @id @default(autoincrement())
	education Int
	religion Int
	techers Int
	doctors Int
	soldiers Int
	engineers Int
	builders Int
	fertility Int
	politicalLeaning Int

	@@map("villages")
}

model Currency {
	id Int @id @default(autoincrement())
	name Int

	@@map("curriencies")
}

model VillageCurrencies {
	id Int @id @default(autoincrement())
	villageId Int @map("village_id")
	amount Int

	@@map("village_currencies")
}

model Alliance {
	id Int @id @default(autoincrement())

	@@map("alliances")
}

model Market {
	id Int @id @default(autoincrement())

	@@map("markets")
}

model MarketOffer {
	id Int @id @default(autoincrement())
	offerGold Int @map("offer_gold")
	offerCurrencyId Int
	offerCurrencyAmount Int
	receieGold Int

	@@map("market_offers")
}
