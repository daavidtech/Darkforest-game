{
	"name": "darkforest",
	"private": true,
	"scripts": {
		"format": "prettier --write --no-semi .",
		"format:check": "prettier --check --no-semi .",
		"typecheck": "tsc -p tsconfig.json --noEmit",
		"test": "bun test",
		"lint": "eslint . --ext .ts,.tsx --max-warnings=0",
		"lint-fix": "eslint . --ext .ts,.tsx --fix",
		"prepare": "husky install",
		"dev": "bun run --development ./server/server.ts"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"prettier": "^3.6.2",
		"eslint": "^9.9.0",
		"@eslint/js": "^9.9.0",
		"@typescript-eslint/parser": "^7.18.0",
		"@typescript-eslint/eslint-plugin": "^7.18.0",
		"eslint-config-prettier": "^9.1.0",
		"globals": "^15.11.0",
		"husky": "^9.1.6",
		"lint-staged": "^15.2.10"
	},
	"lint-staged": {
		"*.{ts,tsx,js,jsx,json,css,md}": [
			"prettier --write --no-semi",
			"eslint --fix"
		]
	},
	"peerDependencies": {
		"typescript": "^5"
	}
}
